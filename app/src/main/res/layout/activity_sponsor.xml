<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#EEEEEE"
tools:context=".ui.SponsorActivity">

<RelativeLayout
    android:paddingBottom="40dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/temca_logo_mini"/>

    <TextView
        android:id="@+id/headerTypeCable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/logoImageView"
        android:layout_centerVertical="true"
        android:fontFamily="@font/mitr_regular"
        android:textColor="#0E4194"
        android:text="ผู้สนับสนุน"
        android:textSize="35dp"/>

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/logoSponsor1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/building"/>

            <ImageView
                android:id="@+id/logoSponsor2"
                android:layout_toRightOf="@+id/logoSponsor1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/solar_energy"/>

            <ImageView
                android:id="@+id/logoSponsor3"
                android:layout_toRightOf="@+id/logoSponsor2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/helmet"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/logoSponsor4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/screwdriver"/>

            <ImageView
                android:id="@+id/logoSponsor5"
                android:layout_toRightOf="@+id/logoSponsor4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/saw"/>

            <ImageView
                android:id="@+id/logoSponsor6"
                android:layout_toRightOf="@+id/logoSponsor5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/extinguisher"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/logoSponsor7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/clipboard"/>

            <ImageView
                android:id="@+id/logoSponsor8"
                android:layout_toRightOf="@+id/logoSponsor7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/goggles"/>

            <ImageView
                android:id="@+id/logoSponsor9"
                android:layout_toRightOf="@+id/logoSponsor8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/switch_on_off"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
