<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:background="@drawable/background_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="never"
    tools:context=".MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/logoImageView"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/temca_logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/mitr_regular"
            android:textColor="#0E4194"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:textSize="25sp"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"
            android:gravity="center_horizontal"
            android:text="Cable and Conduit"/>

        <TextView
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/mitr_regular"
            android:textColor="#0E4194"
            android:maxLines="1"
            android:textSize="25sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"
            android:gravity="center_horizontal"
            android:text="Calculator"/>


        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonCurrentRating"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:backgroundTint="#092B61"
                    android:elevation="10dp"
                    android:fontFamily="@font/mitr_regular"
                    android:onClick="HandleOnClick"
                    android:text="หาพิกัดกระแสไฟฟ้า"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonTypeAndAmountRails"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:backgroundTint="#092B61"
                    android:elevation="10dp"
                    android:fontFamily="@font/mitr_regular"
                    android:onClick="HandleOnClick"
                    android:text="หาชนิดและจำนวนสายในรางเดินสาย"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonTwoPhase"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:backgroundTint="#092B61"
                    android:elevation="10dp"
                    android:fontFamily="@font/mitr_regular"
                    android:onClick="HandleOnClick"
                    android:text="หาขนาดวงจรไฟฟ้า 3 เฟส"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonMoter"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:backgroundTint="#092B61"
                    android:elevation="10dp"
                    android:fontFamily="@font/mitr_regular"
                    android:onClick="HandleOnClick"
                    android:text="หาขนาดวงจรมอเตอร์"
                    android:textColor="@color/white" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonTypeAndAmountConduit"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:backgroundTint="#092B61"
                    android:elevation="10dp"
                    android:fontFamily="@font/mitr_regular"
                    android:onClick="HandleOnClick"
                    android:text="หาชนิดและจำนวนสายในท่อ"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonOnePhase"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:backgroundTint="#092B61"
                    android:elevation="10dp"
                    android:fontFamily="@font/mitr_regular"
                    android:onClick="HandleOnClick"
                    android:text="หาขนาดวงจรไฟฟ้า 1 เฟส"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonTypeAndAmountRailCable"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:backgroundTint="#092B61"
                    android:elevation="10dp"
                    android:fontFamily="@font/mitr_regular"
                    android:gravity="bottom|center_horizontal"
                    android:onClick="HandleOnClick"
                    android:text="หาชนิดและจำนวนสายในรางเคเบิล"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonTransformer"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:backgroundTint="#092B61"
                    android:elevation="10dp"
                    android:fontFamily="@font/mitr_regular"
                    android:onClick="HandleOnClick"
                    android:text="หาขนาดวงจรหม้อแปลง"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="bottom|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTerm"
                    android:layout_marginRight="30dp"
                    android:drawableTint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mitr_regular"
                    android:textColor="@color/white"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="15sp"
                    android:autoSizeStepGranularity="2sp"
                    android:text="มาตรฐานการติดตั้ง"/>

                    <TextView
                        android:layout_marginRight="30dp"
                        android:drawableTint="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr_regular"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeStepGranularity="2sp"
                        android:text="วิธีการใช้งานอยู่"/>

                    <TextView
                        android:onClick="sponsorOnClick"
                        android:id="@+id/textViewSponser"
                        android:drawableLeft="@drawable/ic_engineering_24px"
                        android:drawableTint="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr_regular"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeStepGranularity="2sp"
                        android:text="ผู้สนับสนุน"/>


                </LinearLayout>

                <TextView
                    android:padding="20dp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mitr_regular"
                    android:textColor="@color/white"
                    android:text="สมาคมช่างเหมาไฟฟ้าและเครื่องกลไทย"/>

            </LinearLayout>

    </LinearLayout>

</ScrollView>