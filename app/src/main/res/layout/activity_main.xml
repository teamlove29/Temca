<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<ScrollView
    android:layout_weight="1"
    android:layout_above="@+id/sponser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="80dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/temca_logo"/>

                <TextView
                    android:id="@+id/textMain1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/mitr_regular"
                    android:layout_toRightOf="@+id/logoImageView"
                    android:textColor="#0E4194"
                    android:autoSizeTextType="uniform"
                    android:textSize="20sp"
                    android:autoSizeMinTextSize="18sp"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeStepGranularity="2sp"
                    android:maxLines="1"
                    android:text="Cable and Raceway"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/logoImageView"
                    android:layout_below="@+id/textMain1"
                    android:fontFamily="@font/mitr_regular"
                    android:textColor="#0E4194"
                    android:textSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="23sp"
                    android:autoSizeStepGranularity="2sp"
                    android:maxLines="1"
                    android:text="Calculator"/>
            </RelativeLayout>

        </LinearLayout>

    <LinearLayout
        android:background="@drawable/background_main"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonCurrentRating"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="@drawable/btn_rounded_main"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:fontFamily="@font/mitr_light"
            android:onClick="HandleOnClick"
            android:padding="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:drawableRight="@drawable/ic_main_1"
            android:text="พิกัดกระแสสายไฟฟ้า"
            android:textColor="@color/color_font_main" />
        <Button
            android:id="@+id/buttonTypeAndAmountConduit"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:background="@drawable/btn_rounded_main"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:fontFamily="@font/mitr_light"
            android:onClick="HandleOnClick"
            android:padding="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:drawableRight="@drawable/ic_main_2"
            android:text="ชนิดและจำนวนสายในท่อ"
            android:textColor="@color/color_font_main" />
        <Button
            android:id="@+id/buttonTypeAndAmountRails"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:background="@drawable/btn_rounded_main"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:fontFamily="@font/mitr_light"
            android:onClick="HandleOnClick"
            android:padding="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:drawableRight="@drawable/ic_main_3"
            android:text="ชนิดและจำนวนสายในรางเดินสาย (wireway)"
            android:textColor="@color/color_font_main" />
        <Button
            android:id="@+id/buttonTypeAndAmountRailCable"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:background="@drawable/btn_rounded_main"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:fontFamily="@font/mitr_light"
            android:onClick="HandleOnClick"
            android:padding="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:drawableRight="@drawable/ic_main_4"
            android:text="ชนิดและจำนวนสายในรางเดินเคเบิ้ล (cable tray)"
            android:textColor="@color/color_font_main" />
        <Button
            android:id="@+id/buttonOnePhase"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:background="@drawable/btn_rounded_main"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:fontFamily="@font/mitr_light"
            android:onClick="HandleOnClick"
            android:padding="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:drawableRight="@drawable/ic_main_5"
            android:text="ขนาดวงจรไฟฟ้า 1 เฟส"
            android:textColor="@color/color_font_main" />
        <Button
            android:id="@+id/buttonThreePhase"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:background="@drawable/btn_rounded_main"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:fontFamily="@font/mitr_light"
            android:onClick="HandleOnClick"
            android:padding="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:drawableRight="@drawable/ic_main_6"
            android:text="ขนาดวงจรไฟฟ้า 3 เฟส"
            android:textColor="@color/color_font_main" />
        <Button
            android:id="@+id/buttonMoter"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:background="@drawable/btn_rounded_main"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:fontFamily="@font/mitr_light"
            android:onClick="HandleOnClick"
            android:padding="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:drawableRight="@drawable/ic_main_7"
            android:text="ขนาดวงจรมอเตอร์"
            android:textColor="@color/color_font_main" />
        <Button
            android:id="@+id/buttonTransformer"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:background="@drawable/btn_rounded_main"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:fontFamily="@font/mitr_light"
            android:onClick="HandleOnClick"
            android:padding="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:drawableRight="@drawable/ic_main_8"
            android:text="ขนาดวงจรหม้อแปลง"
            android:textColor="@color/color_font_main" />


    </LinearLayout>

    </LinearLayout>

</ScrollView>

    <LinearLayout
        android:id="@+id/sponser"
        android:gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:background="#0F4294"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:id="@+id/textViewTerm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_condition_main"
                android:fontFamily="@font/mitr_light"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="1"
                android:text=" มาตรฐานการติดตั้ง"/>

            <TextView
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:onClick="termsOfUseOnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_mata_main"
                android:fontFamily="@font/mitr_light"
                android:textColor="@color/white"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text=" เงื่อนไขการใช้งาน"/>

            <TextView
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:onClick="sponsorOnClick"
                android:id="@+id/textViewSponser"
                android:drawableLeft="@drawable/ic_sponser_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr_light"
                android:textColor="@color/white"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text=" ผู้สนับสนุน"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/kanit_regular"
                android:textColor="@color/white"
                android:maxLines="1"
                android:text="สมาคมช่างเหมาไฟฟ้าและเครื่องกลไทย"/>
            <TextView
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeMinTextSize="11sp"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/kanit_regular"
                android:textColor="@color/white"
                android:maxLines="1"
                android:text="ผศ. ประสิทธิ์ พิทยพัฒน์"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>