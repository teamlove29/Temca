<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.PipeSize.PipeSizeReportActivity">

    <RelativeLayout
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/temca_logo_mini"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/logoImageView"
            android:layout_centerVertical="true"
            android:fontFamily="@font/mitr_regular"
            android:textColor="@color/black"
            android:text="@string/cable_and_conduit_calculator"
            android:textSize="18dp"/>

    </RelativeLayout>


    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/placeHolderBG"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/black" />


    <LinearLayout
        android:background="@color/white"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="รายงานผลการคำนวณขนาดสาย"
            android:fontFamily="@font/sarabun_medium"
            android:textColor="@color/black"
            android:textSize="20dp"/>


            <LinearLayout
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                    <RelativeLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textViewWireSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="ขนาดสายไฟฟ้าที่เหมาะสม"
                            android:textColor="@color/black"
                            android:fontFamily="@font/sarabun_medium"
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/textViewResultWireSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/sarabun_regular"
                            android:text="10 sq.mm."
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </RelativeLayout>


                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewWireGround"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="ขนาดสายดินที่เหมาะสม"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sarabun_medium"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/textViewResultWireGroundInReport"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 sq.mm."
                        android:textColor="@color/black"
                        android:fontFamily="@font/sarabun_regular"
                        android:textSize="18dp"/>

                </RelativeLayout>


                    <RelativeLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textViewConduitSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="ขนาดท่อไฟฟ้า"
                            android:textColor="@color/black"
                            android:fontFamily="@font/sarabun_medium"
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/textViewResultConduitSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/sarabun_regular"
                            android:text="3/4"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textViewPressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="แรงดันตก"
                            android:textColor="@color/black"
                            android:fontFamily="@font/sarabun_medium"
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/textViewResultPressure"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-%"
                            android:textColor="@color/black"
                            android:fontFamily="@font/sarabun_regular"
                            android:textSize="18dp"/>

                    </RelativeLayout>

        <LinearLayout
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/copy_right"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:fontFamily="@font/sarabun_regular"/>

            <RelativeLayout
                android:background="#EEEEEE"
                android:gravity="center"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendEmailInWireSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btnPrint"
                    app:cornerRadius="10dp"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textSize="14dp"
                    android:backgroundTint="#50596F"
                    android:fontFamily="@font/mitr_regular"
                    android:text="@string/share"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</LinearLayout>